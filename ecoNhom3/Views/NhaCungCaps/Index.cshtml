@model IEnumerable<ecoNhom3.Models.NhaCungCap>
@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_Admin";
}
<head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
    <h3 class="w3-bar-item w3-padding w3-white" style="width:100%; text-align: center">Nhà Cung Cấp</h3>
    <br />
    <br />
  
    <p>
        <a asp-action="Create" class="w3-bar-item w3-button w3-padding w3-pale-green"><i class="fa fa-plus-square"></i> 
        Thêm Nhà Cung Cấp</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Mã Nhà CC
                </th>
                <th>
                    Tên Nhà Cung Cấp
                </th>
                <th>
                    Địa Chỉ
                </th>
                <th>
                    SĐT
                </th>
                <th>
                    Email
                </th>
                <th>
                    Mô Tả
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaNcc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNcc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    <a asp-controller="NhaCungCaps" asp-action="Edit" asp-route-id="@item.MaNcc" class="w3-pale-yellow w3-button">Sửa</a> |
                    <a asp-controller="NhaCungCaps" asp-action="Delete" asp-route-id="@item.MaNcc" class="w3-pale-red w3-button">Xóa</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>

