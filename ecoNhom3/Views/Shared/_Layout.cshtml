                {
                    <ul class="dropdown-menu">
                        <li><a asp-controller="ThanhViens" asp-action="Create">Đăng ký tài khoản</a></li>

                        <li><a asp-controller="ThanhViens" asp-action="Login">Đăng nhập</a></li>
                    </ul>

                }
                else
                {

                    <ul class="dropdown-menu">
                        <li><a href="~/ThanhViens/Details/@Context.Session.GetInt32("MaTv")">Thông tin tài khoản</a></li>

