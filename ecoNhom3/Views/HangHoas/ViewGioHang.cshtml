@model List<ecoNhom3.Models.ChiTietHd>
@{
    ViewData["Title"] = "Xem Giỏ Hàng";
}

<meta name="viewport" content="width=device-width" />
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - ecoNhom3</title>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/css/mycss.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<body>
    <div class="row">
        <div class="col-sm-6">
            <div class="row works" style="position:relative;z-index:1;">
                <div id="id01" class="modall" style="display:block;">
                    <div class="dschonmon">
                        <h2 id="dscm">THÔNG TIN GIỎ HÀNG</h2>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Tên Sản Phẩm
                                    </th>
                                    <th>
                                        Đơn Giá
                                    </th>
                                    <th>
                                        Số Lượng
                                    </th>
                                    <th>
                                        Giảm Giá
                                    </th>
                                    <th>
                                        Thành tiền
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.HangHoa.TenHh
                                        </td>
                                        <td>
                                            @item.DonGia $
                                        </td>
                                        <td>
                                            @item.SoLuong
                                        </td>
                                        <td>
                                            @item.GiamGia
                                        </td>
                                        <td>
                                            @item.ThanhTien
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <span style="float:right; margin-right:10px;">Tổng cộng:@ViewBag.TongTien $</span>
                        <br />
                        <br />
                        <a class="btn btn-success" asp-action="index" asp-controller="Home" style="float:left; margin-top:19px;margin-left:500px;"> Mua Thêm Sản Phẩm Khác  </a>
                        <br />
                        <a class="btn btn-danger" asp-action="Laphoadon" asp-controller="HangHoas" style="float:right;"> Đặt Hàng  </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>// Get the modal
        var modal = document.getElementById('id01');

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }</script>
</body>